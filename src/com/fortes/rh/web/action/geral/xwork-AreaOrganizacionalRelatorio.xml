		</action>
		<action name="gerarRelatorio" class="com.fortes.rh.web.action.geral.AreaOrganizacionalRelatorioAction" method="gerarRelatorio">
		    <interceptor-ref name="myDefaultWebStack"/>
			<result name="success" type="jasper">
